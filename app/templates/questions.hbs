
{{yield}}
<div class="container">
<form class="form">
  <fieldset class="qstn">
  Question {{model.id}}. {{model.qtn}}?<br>
  </fieldset>
  {{#each model.opt as |option|}}
  <fieldset class="form-field">
    {{#if (eq model.freeze true)}}
        {{#if (eq model.inp option)}}
          <label class="checked"><input type="radio" name="options" checked disabled >{{option}}</label>
        {{else}}
          <label class="unchecked"><input type="radio" name="options"  disabled >{{option}}</label>
        {{/if}}
    {{else}}
          <label class="form-label"><input type="radio" name="options" {{action 'setValue' model option  preventDefault=false}}>{{option}}</label>
    {{/if}}
</fieldset>
  {{/each}}
  </form>
    {{#if (lte model.id 4)}}
      <button class="btn" {{action 'nextq'  model model.num}}>Next</button>
    {{else}}
      <button class="btn" {{action 'res' model}}>Results</button>
    {{/if}}
</div>
{{outlet}}
